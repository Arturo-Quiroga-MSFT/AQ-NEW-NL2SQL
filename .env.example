# Copy this file to .env and replace placeholder values with your real secrets/config.
# Do NOT commit your real .env to version control.

# Azure OpenAI
AZURE_OPENAI_API_KEY=YOUR_AZURE_OPENAI_API_KEY
AZURE_OPENAI_ENDPOINT=https://YOUR_OPENAI_RESOURCE_NAME.openai.azure.com/
AZURE_OPENAI_API_VERSION=2025-04-01-preview  # Chat Completions REST api-version; see Azure docs
AZURE_OPENAI_DEPLOYMENT_NAME=YOUR_MODEL_DEPLOYMENT_NAME

# Azure SQL (primary names used by app code)
AZURE_SQL_SERVER=YOUR_SQL_SERVER_NAME.database.windows.net
AZURE_SQL_DB=YOUR_DATABASE_NAME
AZURE_SQL_USER=YOUR_SQL_USERNAME
AZURE_SQL_PASSWORD=YOUR_SQL_PASSWORD

# Azure SQL (alt names used by DATABASE_SETUP/run_migrations.py)
# You may set these as aliases or keep them in sync with the above.
AZURE_SQL_DATABASE=YOUR_DATABASE_NAME
AZURE_SQL_USERNAME=YOUR_SQL_USERNAME

# NL2DAX over HTTP/XMLA (Power BI/AAS)
USE_XMLA_HTTP=True  # set to True or False
PBI_TENANT_ID=YOUR_TENANT_GUID
PBI_CLIENT_ID=YOUR_AAD_APP_CLIENT_ID
PBI_CLIENT_SECRET=YOUR_AAD_APP_CLIENT_SECRET
PBI_XMLA_ENDPOINT=powerbi://api.powerbi.com/v1.0/myorg/YOUR_WORKSPACE_NAME
PBI_DATASET_NAME=YOUR_DATASET_NAME
PBI_DATASET_ID=YOUR_DATASET_GUID
PBI_WORKSPACE_ID=YOUR_WORKSPACE_GUID
POWERBI_WORKSPACE_ID=YOUR_WORKSPACE_GUID
TENANT_ID=YOUR_TENANT_GUID
CLIENT_ID=YOUR_AAD_APP_CLIENT_ID
CLIENT_SECRET=YOUR_AAD_APP_CLIENT_SECRET

# Legacy pyadomd (Windows/Mono)
# XMLA_CONNECTION_STRING=Provider=MSOLAP;Data Source=your-server;Initial Catalog=your-database;User ID=your-username;Password=your-password;
