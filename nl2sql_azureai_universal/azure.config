# ========================================
# Azure App Service Configuration
# ========================================

# This file tells Azure App Service how to run the bot
# Place this in the root of your deployment

[app]
# Entry point for the application
entry_point = start_server.py

# Python version (Azure will use this)
python_version = 3.11

[build]
# Install production dependencies
pip_install = requirements-production.txt

[startup]
# Command to start the application
command = python start_server.py

# Port that Azure will map (Azure sets PORT env variable)
# Our app listens on port from environment or defaults to 3978
