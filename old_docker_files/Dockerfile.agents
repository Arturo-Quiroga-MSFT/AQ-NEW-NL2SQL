# Dockerfile.agents - Container image for Agents NL2SQL Streamlit UI
# Base identical to legacy Dockerfile for consistency
FROM python:3.11-slim-bookworm

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

WORKDIR /app

# Install system deps + msodbcsql18 (for pyodbc to Azure SQL)
ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y --no-install-recommends \
        ca-certificates \
        curl \
        gnupg \
        apt-transport-https \
        unixodbc \
    && mkdir -p /etc/apt/keyrings \
    && curl -fsSL https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor -o /etc/apt/keyrings/microsoft.gpg \
    && echo "deb [arch=amd64,arm64 signed-by=/etc/apt/keyrings/microsoft.gpg] https://packages.microsoft.com/debian/12/prod bookworm main" > /etc/apt/sources.list.d/microsoft-prod.list \
    && apt-get update \
    && ACCEPT_EULA=Y apt-get install -y --no-install-recommends msodbcsql18 \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /var/cache/apt/archives/*

# Copy project
COPY . .

# Install Python dependencies: root requirements then agents-specific
RUN pip install --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt \
    && if [ -f agents_nl2sql/requirements.txt ]; then pip install --no-cache-dir -r agents_nl2sql/requirements.txt; fi

# Expose Streamlit port
EXPOSE 8501

# Default command: run Agents UI
CMD ["streamlit", "run", "agents_nl2sql/ui/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
